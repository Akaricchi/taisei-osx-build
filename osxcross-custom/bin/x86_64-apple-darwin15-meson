#!/bin/bash

pushd "$(dirname "$0")"/../.. >/dev/null || exit 1
source common.sh || exit 1
popd >/dev/null

function gen_cross_file {
cat <<EOF
[binaries]
c = '$(xwhich clang)'
cpp = '$(xwhich clang++)'
ar = '$(xwhich ar)'
ranlib = '$(xwhich ranlib)'
ld = '$(xwhich ld)'
strip = '$(xwhich strip)'
pkgconfig = '$(xwhich pkg-config)'

[properties]
needs_exe_wrapper = true
c_args = ['-fstack-protector-strong', '-D_FORTIFY_SOURCE=2', '-I$ROOT/local/include', '-march=core2', '-mtune=intel']
c_link_args = ['-march=core2', '-mtune=intel', '-L$ROOT/local/lib']

[host_machine]
system = 'darwin'
cpu_family = 'x86_64'
cpu = 'x86_64'
endian = 'little'
EOF
}

crossfile="$CUSTOM/meson_cross_file.auto"
gen_cross_file > "${crossfile}"
prefix="$ROOT/local"

unset CFLAGS
unset CXXFLAGS
unset LDFLAGS

PATH="${prefix}/bin:$PATH" meson \
    --cross-file "${crossfile}" \
    --prefix="${prefix}" \
    --libdir=lib \
    --default-library=static \
"$@"
